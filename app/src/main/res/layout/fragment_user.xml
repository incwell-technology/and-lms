<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.fragment.UserFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:layout_centerInParent="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:background="#cccccc"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/user_image"
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="60dp"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="2dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="2"
                    app:civ_shadow_color="#f0f0f5"/>

            <TextView
                    android:id="@+id/edit_photo"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/user_image"
                    android:gravity="bottom|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Photo"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="#0066ff"
                    android:textSize="20sp"/>

            <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/user_name"
                    android:layout_below="@+id/edit_photo"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="20sp"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <View android:layout_width="fill_parent"
                  android:id="@+id/first_line"
                  android:layout_height="1dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:background="#cccccc"/>

            <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/phone_number"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0066ff"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"/>

            <View android:layout_width="fill_parent"
                  android:id="@+id/second_line"
                  android:layout_height="1dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:background="#cccccc"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <com.github.kalaganov.circular.ProgressView
                        android:id="@+id/annual_leave"
                        android:layout_margin="5dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:textColor="#000"
                        app:progressBackgroundStrokeWidth="10dp"
                        app:progressStrokeWidth="8dp"
                        app:showProgressOnTip="true"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/annual"
                        android:gravity="center"
                        android:textColor="#cccccc"/>
            </LinearLayout>
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <com.github.kalaganov.circular.ProgressView
                        android:id="@+id/sick_leave"
                        android:layout_margin="5dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:textColor="#000"
                        app:progressBackgroundStrokeWidth="10dp"
                        app:progressStrokeWidth="8dp"
                        app:showProgressOnTip="true"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/sick"
                        android:gravity="center"
                        android:textColor="#cccccc"/>
            </LinearLayout>

            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <com.github.kalaganov.circular.ProgressView
                        android:id="@+id/compensation_leave"
                        android:layout_margin="5dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:textColor="#000"
                        app:progressBackgroundStrokeWidth="10dp"
                        app:progressStrokeWidth="8dp"
                        app:showProgressOnTip="true"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/compensation"
                        android:gravity="center"
                        android:textColor="#cccccc"/>
            </LinearLayout>

            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>
        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/layout_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/date_of_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorText"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Birthday"
                          android:textColor="#cccccc"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/layout_joined"
                    android:layout_below="@+id/layout_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/joined_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"/>

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Joined Date"
                          android:textColor="#cccccc"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/layout_company"
                    android:layout_below="@+id/layout_joined"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:text="@string/inc1"
                        android:textColor="@color/colorText"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Company"
                          android:textColor="#cccccc"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/layout_leave_issuer"
                    android:layout_below="@+id/layout_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/leave_issuer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Leave Issuer"
                          android:textColor="#cccccc"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/layout_email_address"
                    android:layout_below="@+id/layout_leave_issuer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Email Addresss"
                          android:textColor="#cccccc"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>
