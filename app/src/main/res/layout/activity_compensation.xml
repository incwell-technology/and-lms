<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.compensation.CompensationActivity">
    <data>
        <variable
                name="cvm"
                type="com.incwelltechnology.lms.ui.compensation.CompensationViewModel"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_days"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:textColorHint="@color/colorTextSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_nod"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_marginEnd="@dimen/dimen_8x2"
                    app:boxCornerRadiusTopEnd="@dimen/dimen_5x2"
                    app:boxCornerRadiusTopStart="@dimen/dimen_5x2"
                    android:layout_marginTop="@dimen/dimen_8x4"
                    android:layout_marginBottom="@dimen/dimen_8x2"
                    android:layout_marginStart="@dimen/dimen_8x2">
                <com.google.android.material.textfield.TextInputEditText
                        android:text="@={cvm.days}"
                        android:id="@+id/days"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_reason"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:textColorHint="@color/colorTextSecondary"
                    android:layout_marginStart="@dimen/dimen_8x2"
                    android:layout_marginEnd="@dimen/dimen_8x2"
                    android:layout_marginBottom="@dimen/dimen_8x4"
                    android:layout_marginTop="@dimen/dimen_4"
                    app:boxCornerRadiusTopEnd="@dimen/dimen_5x2"
                    app:boxCornerRadiusTopStart="@dimen/dimen_5x2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_compensation_for"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/compReason"
                        android:text="@={cvm.compensationReason}"
                        android:height="200dp"
                        android:gravity="start"
                        android:inputType="textLongMessage|textMultiLine"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/apply_compensation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_gravity="bottom|end"
                app:srcCompat="@drawable/ic_check_black_24dp"
                app:backgroundTint="@color/colorPrimary"/>

        <ProgressBar
                android:id="@+id/circular_progress"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

    </FrameLayout>
</layout>