<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/employee_detail"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8x1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/image"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/logo1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"/>
    <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintBottom_toBottomOf="@+id/image"/>
    <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/phoneLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/logo1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"/>
    <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/phoneLogo"
            app:layout_constraintTop_toBottomOf="@+id/department"/>
    <TextView
            android:textSize="18sp"
            android:id="@+id/textView14"
            android:text="@string/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/phoneLogo"
            app:layout_constraintBottom_toBottomOf="@+id/phoneLogo"/>
    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/emailLogo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/logo1"
            app:layout_constraintTop_toBottomOf="@+id/phoneLogo"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/emailLogo"
            app:layout_constraintTop_toBottomOf="@+id/textView14"/>
    <TextView
            android:id="@+id/textView15"
            android:text="@string/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/emailLogo"
            app:layout_constraintBottom_toBottomOf="@+id/emailLogo"/>
    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/logo1"
            android:id="@+id/leaveIssuerLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/emailLogo"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaveIssuer"
            app:layout_constraintStart_toEndOf="@+id/leaveIssuerLogo"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:textSize="18sp"/>
    <TextView
            android:text="@string/leave_issuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/leaveIssuerLogo"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/leaveIssuerLogo"/>
</androidx.constraintlayout.widget.ConstraintLayout>