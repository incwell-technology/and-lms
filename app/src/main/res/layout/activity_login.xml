<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewmodel"
                type="com.incwelltechnology.lms.ui.auth.AuthViewModel"/>
    </data>

    <RelativeLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_8x2"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:id="@+id/upperLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_8x2">
            <ImageView
                    android:layout_width="@dimen/welcome_banner_size"
                    android:layout_height="@dimen/welcome_banner_size"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_welcome"
                    android:contentDescription="@string/imageLogo"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:focusableInTouchMode="false"
                    app:boxStrokeColor="@color/colorAccent"
                    android:id="@+id/til_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8x4"
                    android:layout_marginStart="@dimen/dimen_8x2"
                    android:layout_marginEnd="@dimen/dimen_8x2"
                    android:textColorHint="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    android:hint="@string/hint_username">

                <com.google.android.material.textfield.TextInputEditText
                        android:text="@={viewmodel.username}"
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorText"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:focusableInTouchMode="false"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:id="@+id/til_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen"
                    android:layout_marginStart="@dimen/dimen_8x2"
                    android:layout_marginEnd="@dimen/dimen_8x2"
                    android:textColorHint="@color/colorTextSecondary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:hint="@string/hint_password"
                    app:passwordToggleEnabled="true"
                    app:endIconMode="password_toggle"
                    app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                        android:text="@={viewmodel.password}"
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorText"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                    android:id="@+id/bottomLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="@dimen/dimen_8x2"
                        android:layout_marginEnd="@dimen/dimen_8x2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:visibility="gone"
                        android:progress="30"/>
                <com.google.android.material.button.MaterialButton
                        android:onClick="@{() -> viewmodel.onLoginButtonClick()}"
                        android:layout_centerInParent="true"
                        android:paddingLeft="@dimen/dimen_5x4"
                        android:paddingRight="@dimen/dimen_5x4"
                        android:paddingTop="@dimen/dimen_5x2"
                        android:paddingBottom="@dimen/dimen_5x2"
                        android:id="@+id/login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryVariant"
                        app:cornerRadius="@dimen/dimen_5x4"
                        app:rippleColor="@color/colorTextSecondary"
                        android:text="@string/txt_login"/>
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/forgot_password"
                        android:layout_below="@id/login_btn"
                        android:layout_marginTop="@dimen/dimen_8x6"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        app:rippleColor="@color/colorTextSecondary"
                        android:focusable="true"
                        android:text="@string/txt_forgot_password"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>