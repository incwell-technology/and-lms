<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_8x2"
        android:paddingLeft="@dimen/dimen_8x2"
        android:paddingRight="@dimen/dimen_8x2"
        android:paddingTop="@dimen/dimen_8x2"
        android:orientation="vertical"
        android:gravity="center">

    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_marginTop="@dimen/dimen_8x5"
            android:layout_width="@dimen/dimen_10x10"
            android:layout_height="@dimen/dimen_10x10"
            android:layout_gravity="center"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/nav_user_image"
            app:civ_border_color="@color/colorAccentVariant"
            app:civ_border_width="@dimen/dimen_5x2"
            app:civ_shadow="true"
            app:civ_shadow_radius="5"
            app:civ_shadow_color="@color/colorText"/>


    <TextView
            android:id="@+id/nav_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:textSize="20sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5x2"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:id="@+id/nav_user_email"/>

    <View   android:background="@color/colorText"
            android:layout_marginTop="@dimen/dimen_8x2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</LinearLayout>
