<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/profilePageBackGroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_marginTop="@dimen/dimen_8x3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dimen_8x6"
                    android:id="@+id/user_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:civ_border_color="@color/colorAccentVariant"
                    app:civ_border_width="@dimen/dimen_4"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="5"
                    app:civ_shadow_color="@color/colorText"/>

            <LinearLayout
                    android:layout_toEndOf="@+id/user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_8x1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/dimen_8x1"/>
                <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_phone_black_24dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"
                        android:layout_marginBottom="@dimen/dimen_8x1"/>
                <com.google.android.material.chip.Chip
                        android:id="@+id/edit_photo"
                        android:text="@string/edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"
                        app:chipStrokeWidth="@dimen/dimen_1"
                        app:chipStrokeColor="@color/colorAccent"
                        app:chipBackgroundColor="@color/colorAccentVariant"
                        app:chipIcon="@drawable/ic_edit"
                        app:chipIconTint="@color/colorAccent"/>

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_margin="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <com.github.kalaganov.circular.ProgressView
                        android:id="@+id/annual_leave"
                        android:layout_margin="5dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textColor="@color/colorText"
                        app:maxProgressValue="12.0"
                        app:progressBackgroundStrokeWidth="10dp"
                        app:progressColor="@color/colorAccent"
                        app:progressStrokeWidth="8dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/annual_leave"
                        android:gravity="center"
                        android:textColor="@color/colorTextSecondary"/>
            </LinearLayout>
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <com.github.kalaganov.circular.ProgressView
                        android:id="@+id/sick_leave"
                        android:layout_margin="5dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textColor="@color/colorText"
                        app:maxProgressValue="7.0"
                        app:progressColor="@color/colorAccent"
                        app:progressBackgroundStrokeWidth="10dp"
                        app:progressStrokeWidth="8dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/sick_leave"
                        android:gravity="center"
                        android:textColor="@color/colorTextSecondary"/>
            </LinearLayout>

            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <com.github.kalaganov.circular.ProgressView
                        android:id="@+id/compensation_leave"
                        android:layout_margin="5dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textColor="@color/colorText"
                        app:progressColor="@color/colorAccent"
                        app:progressBackgroundStrokeWidth="10dp"
                        app:progressStrokeWidth="8dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/compensation"
                        android:gravity="center"
                        android:textColor="@color/colorTextSecondary"/>
            </LinearLayout>

            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>
        </LinearLayout>

        <View android:layout_margin="@dimen/dimen_8x3"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_1"
              android:background="@color/colorTextSecondary"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/layout_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/date_of_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Birthday"
                          android:textColor="@color/colorTextSecondary"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/layout_joined"
                    android:layout_below="@+id/layout_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/joined_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Joined Date"
                          android:textColor="@color/colorTextSecondary"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/layout_company"
                    android:layout_below="@+id/layout_joined"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:text="@string/inc"
                        android:textColor="@color/colorText"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Company"
                          android:textColor="@color/colorTextSecondary"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/layout_leave_issuer"
                    android:layout_below="@+id/layout_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/leave_issuer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Leave Issuer"
                          android:textColor="@color/colorTextSecondary"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/layout_email_address"
                    android:layout_below="@+id/layout_leave_issuer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="20dp"
                          android:text="Email Addresss"
                          android:textColor="@color/colorTextSecondary"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>